.group-form
  %h1 新規チャットグループ
  = form_for @group do |f|
    .group-form__field.clearfix
      .group-form__field--left
        = f.label :group_name, "グループ名", class: "group-form__label"
      .group-form__field--right
        = f.text_field :name, placeholder: "グループ名を入力してください", id: "group_name", class: "group-form__input"
    .group-form__field.clearfix
      .group-form__field--left
        .group-form__label
          = f.label :group_チャットメンバーを追加, "チャットメンバーを追加"
      .group-form__field--right
        .group-form__search.clearfix
          = f.search_field :name, placeholder: "追加したいユーザー名を入力してください", id: "user-search-field", class: "group-form__input"
        #user-search-result
    .group-form__field.clearfix
      .group-form__field--left
        .group-form__label
          = f.label :group_チャットメンバー, "チャットメンバー"
      .group-form__field--right
        #group-users
          #group-user-22.group-user.clearfix
            = f.label :users
            = collection_check_boxes(:group, :user_ids, User.all, :id, :name) do |b|
              = b.label {b.check_box + b.text }
            %input{name: "group[user_ids][]", type: "hidden", value: "22"}/
    .group-form__field.clearfix
      .group-form__field--left
      .group-form__field--right
        = f.submit "Save", "data-disable-with" => "Save", class: "group-form__action-btn"
