.notification
  .chat
    .chat-side
      .chat-user
        %h5
          = current_user.name
        .chat-user__icons
          = link_to new_group_path, class: 'chat-user__icon' do
            %i.fa.fa-pencil-square-o
          = link_to edit_user_registration_path, class: 'chat-user__icon' do
            %i.fa.fa-cog
      %ul.chat-groups
        -(1..3).each do |i|
          %li.chat-group
            %a.chat-group__link
              %p.chat-group__name group #{i}
              %p.chat-group__message
                Hello World!
    
