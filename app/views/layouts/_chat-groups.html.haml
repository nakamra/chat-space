%ul.chat-groups
  - @groups.each do |group|
    %li.chat-group
      = link_to group_messages_path(group.id), class: "chat-group__link" do
        %p.chat-group__name
          = group.name
        %p.chat-group__message
          - group.messages.last(1).each do |group_message|
            = group_message.body
